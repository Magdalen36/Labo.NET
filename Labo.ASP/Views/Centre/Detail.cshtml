@model Labo.ASP.Models.DetailCentreModel

@{
    ViewData["Title"] = "Detail";
}

<h1>Informations du centre</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            Adresse:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomRue) <span>, </span> @Html.DisplayFor(model => model.NumRue)
        </dd>

        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ville) <span> </span> @Html.DisplayFor(model => model.CodePostal)
        </dd>

        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pays)
        </dd>

        <dt class="col-sm-2">
            Responsable:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameR)
        </dd>

        <dt class="col-sm-2">
            Heures d'ouvertures:
        </dt>
        <dd class="col-sm-10">
            <ul>

                @foreach (var kvp in Model.HeuresOuverture)
                {
                    <li>
                        <span>@kvp.Key</span>&nbsp;
                        <span>@kvp.Value</span>
                    </li>

                }
            </ul>
        </dd>

        <dt class="col-sm-2">
            Vaccins disponibles:
        </dt>
        <dd class="col-sm-10">
            <ul>

                @foreach (var kvp in Model.TypeVaccin)
                {
                    <li>
                        <span>@kvp</span>
                    </li>

                }
            </ul>
        </dd>

    </dl> 
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
